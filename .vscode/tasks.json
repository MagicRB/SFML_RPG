	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build",
			"type": "shell",
			"command": "cd build && cmake .. && make",
			"group": "build",
			"presentation": {
				"reveal": "always",
				"panel": "new"
			},
			"problemMatcher": [
				"$gcc"
			]
		},
		{
			"label": "Build & Run",
			"type": "shell",
			"command": "cd build && cmake .. && make && cd bin && ./SFML_TEST",
			"group": "build",
			"presentation": {
				"reveal": "always",
				"panel": "new"
			},
			"problemMatcher": [
				"$gcc"
			]
		},
		{
			"label": "Debug",
			"type": "shell",
			"command": "cd build/bin && gdb SFML_TEST",
			"group": "build",
			"presentation": {
				"reveal": "always",
				"panel": "new"
			},
			"problemMatcher": []
		},
		{
			"label": "Build & Debug",
			"type": "shell",
			"command": "cd build && cmake .. && make && cd bin && gdb SFML_TEST",
			"group": "build",
			"presentation": {
				"reveal": "always",
				"panel": "new"
			},
			"problemMatcher": []
		}
	]
}